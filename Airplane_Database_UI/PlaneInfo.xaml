<Window x:Class="Airplane_Database_UI.PlaneInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airplane_Database_UI"
        mc:Ignorable="d"
        Title="PlaneInfo" Height="450" Width="800" Background="DarkBlue">
    <Border Background="LightBlue" Margin="20" CornerRadius="40">
        <StackPanel>
            <Label Content="Plane Info" FontSize="30" HorizontalAlignment="Center" FontFamily="Bahnschrift Light"/>
            <TextBlock TextWrapping="Wrap" FontSize="15" Text="PlaneID:" Margin="15,15,658.333,0" Height="20"/>
            <TextBox x:Name="PlID" Height="20" TextWrapping="Wrap" Text="" Margin="80,-20,477.333,0"/>
            <DataGrid x:Name="DataGrid_" Height="215" Width="600" Margin="0,30,0,0"/>
            <Button Content="Load" Margin="0,20,0.333,0" Width="200" Click="Button_Click"/>
            <Button Content="Back" Margin="-600,-20.3,0.333,0" Width="50" Click="Back_Click"/>

        </StackPanel>
    </Border>
</Window>
